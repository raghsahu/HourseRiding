<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@color/colorPrimaryDark">

            <LinearLayout
                android:id="@+id/ll_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/iv_drawer"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:scaleType="fitXY"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_menu_white" />


                <TextView
                    android:id="@+id/tv_main_header"
                    style="@style/textview14white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="@string/home"
                    android:textStyle="bold">

                </TextView>

                <SearchView
                    android:layout_toEndOf="@+id/tv_main_header"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layoutDirection="rtl"
                    style="@style/edit_text_search"
                    android:backgroundTint="@color/white"
                    app:queryHint="@string/search_event"
                    android:queryHint="@string/search_event"
                    app:defaultQueryHint="@string/search_event"
                    android:autofillHints="@string/search_event"
                    app:iconifiedByDefault="false"
                    app:searchIcon="@drawable/ic_search_black_24dp"
                    android:iconifiedByDefault="true"
                    android:searchIcon="@drawable/ic_search_black_24dp"
                    android:searchHintIcon="@drawable/ic_search_black_24dp"
                    android:focusable="false"
                    />
            </LinearLayout>

<!--            <ImageView-->
<!--                android:id="@+id/iv_logo"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:layout_marginEnd="@dimen/_10sdp"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:layout_width="@dimen/_24sdp"-->
<!--                android:layout_height="@dimen/_24sdp"-->
<!--                app:srcCompat="@drawable/ic_search_black_24dp" />-->

            <SearchView
                android:layout_toEndOf="@+id/ll_search"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:id="@+id/search_hint"
                style="@style/edit_text_search"
                android:backgroundTint="@color/white"
                app:queryHint="@string/search_event"
                android:queryHint="@string/search_event"
                app:defaultQueryHint="@string/search_event"
                android:autofillHints="@string/search_event"
                app:iconifiedByDefault="false"
                app:searchIcon="@drawable/ic_search_black_24dp"
                android:iconifiedByDefault="false"
                android:searchIcon="@drawable/ic_search_black_24dp"
                android:searchHintIcon="@drawable/ic_search_black_24dp"
                android:focusable="false"
                />


        </RelativeLayout>

    </LinearLayout>


    <include
        layout="@layout/content_activity_navigation" />

</LinearLayout>



